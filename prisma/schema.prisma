generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== AUTH ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  locale        String    @default("en")
  role          UserRole  @default(USER)

  accounts      Account[]
  sessions      Session[]
  resumes       Resume[]
  subscription  Subscription?
  usageRecords  UsageRecord[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== RESUME ====================

model Resume {
  id             String       @id @default(cuid())
  userId         String
  title          String
  slug           String?

  canvasData     Json
  structuredData Json?
  thumbnail      String?      @db.Text

  templateId     String?
  region         ResumeRegion @default(US)
  profession     String?

  isPublic       Boolean      @default(false)
  pdfUrl         String?

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  template       Template?    @relation(fields: [templateId], references: [id])
  aiReviews      AIReview[]
  versions       ResumeVersion[]

  @@unique([userId, slug])
  @@index([userId])
  @@index([templateId])
}

model ResumeVersion {
  id         String   @id @default(cuid())
  resumeId   String
  canvasData Json
  createdAt  DateTime @default(now())

  resume Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
}

enum ResumeRegion {
  US
  EU
  UA
}

// ==================== TEMPLATES ====================

model Template {
  id          String       @id @default(cuid())
  name        String
  description String?

  canvasData  Json
  thumbnail   String

  region      ResumeRegion
  category    String
  tags        String[]

  isPremium   Boolean      @default(false)
  isActive    Boolean      @default(true)

  nameEn      String
  nameUk      String
  descEn      String?
  descUk      String?

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  resumes     Resume[]

  @@index([region])
  @@index([category])
}

// ==================== AI ====================

// AI Task Configuration - different providers/models for different tasks
model AITaskConfig {
  id          String      @id @default(cuid())
  taskType    AITaskType  @unique

  provider    String      // openai, anthropic, google, custom
  modelId     String      // claude-sonnet-4-20250514, gpt-4o, etc.

  // For custom providers
  customApiUrl    String?
  customApiKeyRef String?  // Reference to SystemSetting key for API key

  // Settings
  temperature     Float     @default(0.7)
  maxTokens       Int       @default(4000)

  isEnabled       Boolean   @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum AITaskType {
  RESUME_PARSING      // Parsing uploaded resumes/PDFs
  RESUME_GENERATION   // Generating resume content from prompts
  TEXT_IMPROVEMENT    // Improving/rewriting text
  RESUME_REVIEW       // Reviewing and scoring resumes
  IMAGE_GENERATION    // Generating images (future)
  TRANSLATION         // Translating content
}

model AIReview {
  id            String   @id @default(cuid())
  resumeId      String?

  profession    String?
  score         Int?
  feedback      Json
  suggestions   Json

  modelUsed     String   @default("claude-3-5-sonnet")
  promptVersion String   @default("v1")

  createdAt     DateTime @default(now())

  resume Resume? @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
}

// Multi-Model Review Configuration - for Premium tier
model MultiModelReviewConfig {
  id          String   @id @default(cuid())

  // Model configuration (stored as JSON array)
  // Format: [{ provider: "anthropic", modelId: "claude-sonnet-4-20250514" }, ...]
  models      Json     @default("[]")

  // Synthesis model - combines results from all models
  synthesisProvider   String   @default("anthropic")
  synthesisModelId    String   @default("claude-sonnet-4-20250514")

  // Settings
  isEnabled           Boolean  @default(true)
  minModelsRequired   Int      @default(2)  // Minimum models for synthesis

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==================== BILLING ====================

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique

  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?

  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)

  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)

  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stripeCustomerId])
}

enum SubscriptionPlan {
  FREE
  PRO
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
  TRIALING
}

model UsageRecord {
  id          String    @id @default(cuid())
  userId      String

  type        UsageType
  count       Int       @default(1)
  metadata    Json?

  periodStart DateTime
  periodEnd   DateTime

  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, periodStart, periodEnd])
  @@index([userId, type, periodStart])
}

enum UsageType {
  AI_GENERATION
  AI_REVIEW
  PDF_PARSE
  PDF_EXPORT
  RESUME_CREATED
}

// ==================== SYSTEM SETTINGS ====================

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  isSecret  Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

